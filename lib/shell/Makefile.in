# $Id: Makefile.in,v 1.5 2005/04/15 18:15:12 smoli Exp $
# ===========================================================================
#
# Makefile for lib/shell subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = lib/shell/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
LIB = ../libshish.a
MODULES = shell_alloc \
shell_basename \
shell_canonicalize \
shell_dirname \
shell_error \
shell_errorn \
shell_fnmatch \
shell_getcwd \
shell_gethome \
shell_gethostname \
shell_getopt \
shell_init \
shell_readlink \
shell_realloc \
shell_realpath \
shell_strdup

SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile .libdep
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib
#INCLUDES += -I$(top_builddir)/lib

# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
