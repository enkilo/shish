# $Id: Makefile.in,v 1.5 2005/04/15 18:15:12 smoli Exp $
# ===========================================================================
#
# Makefile for lib/shell subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = lib/shell/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
LIB = ../libshish.a
@DEBUG_FALSE@MODULES += shell_alloc
@DEBUG_TRUE@MODULES += shell_allocdebug
MODULES += shell_basename
MODULES += shell_canonicalize
MODULES += shell_dirname
MODULES += shell_error
MODULES += shell_errorn
MODULES += shell_fnmatch
MODULES += shell_getcwd
MODULES += shell_gethome
MODULES += shell_gethostname
MODULES += shell_getopt
MODULES += shell_init
MODULES += shell_readlink
@DEBUG_FALSE@MODULES += shell_realloc
@DEBUG_TRUE@MODULES += shell_reallocdebug
MODULES += shell_realpath
@DEBUG_FALSE@MODULES += shell_strdup
@DEBUG_TRUE@MODULES += shell_strdupdebug


SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
@DEPS_TRUE@all: Makefile .libdep
@DEPS_FALSE@all: Makefile $(LIB)
install: 

# dependencies
# ---------------------------------------------------------------------------
@DEPS_TRUE@-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I.
INCLUDES += -I$(top_builddir)

# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
