# $Id: Makefile.in,v 1.3 2005/04/15 18:15:12 smoli Exp $
# ===========================================================================
#
# Makefile for lib/scan subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = @thisdir@

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
LIB = ../libshish.a

MODULES = stralloc_cat \
stralloc_catb \
stralloc_catc \
stralloc_catlong0 \
stralloc_cats \
stralloc_catulong0 \
stralloc_copy \
stralloc_copyb \
stralloc_copys \
stralloc_diffs \
stralloc_free \
stralloc_init \
stralloc_insertb \
stralloc_move \
stralloc_nul \
stralloc_ready \
stralloc_readyplus \
stralloc_remove \
stralloc_trunc \
stralloc_write \
stralloc_zero

SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile .libdep
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib
INCLUDES += -I$(top_builddir)/lib

# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
