# $Id: Makefile.in,v 1.9 2005/04/30 18:16:48 smoli Exp $
# ===========================================================================
#
# Makefile for src/fdstack subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = src/fdstack

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = fdstack.a
MODULES = fdstack_data \
          fdstack_dump \
          fdstack_flatten \
          fdstack_fork \
          fdstack_link \
          fdstack_npipes \
          fdstack_pipe \
          fdstack_push \
          fdstack_pop \
          fdstack_root \
          fdstack_search \
          fdstack_unlink \
          fdstack_unref \
          fdstack_update
          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib
INCLUDES += -I$(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
INCLUDES += -I$(top_builddir)/src
INCLUDES += -include assert.h

# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
