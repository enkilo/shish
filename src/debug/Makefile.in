# $Id: Makefile.in,v 1.7 2005/04/30 18:16:48 smoli Exp $
# ===========================================================================
#
# Makefile for src/debug subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = src/debug/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk
          
# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = debug.a
MODULES += debug_alloc
MODULES += debug_begin
MODULES += debug_char
MODULES += debug_end
MODULES += debug_error
MODULES += debug_free
MODULES += debug_list
MODULES += debug_memory
MODULES += debug_node
MODULES += debug_ptr
MODULES += debug_realloc
MODULES += debug_redir
MODULES += debug_space
MODULES += debug_str
MODULES += debug_stralloc
MODULES += debug_sublist
MODULES += debug_subnode
MODULES += debug_subst
MODULES += debug_ulong
MODULES += debug_unquoted

          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I.
#INCLUDES += -I$(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
#INCLUDES += -I$(top_builddir)/src
INCLUDES += -I$(top_builddir)
INCLUDES += -include assert.h
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk

