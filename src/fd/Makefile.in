# $Id: Makefile.in,v 1.10 2005/04/30 18:16:48 smoli Exp $
# ===========================================================================
#
# Makefile for src/fd subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = src/fd/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = fd.a
MODULES += fd_allocbuf
MODULES += fd_close
MODULES += fd_dump
MODULES += fd_dumplist
MODULES += fd_dup
MODULES += fd_error
MODULES += fd_exec
MODULES += fd_free
MODULES += fd_getname
MODULES += fd_here
MODULES += fd_init
MODULES += fd_list
MODULES += fd_mmap
MODULES += fd_needbuf
MODULES += fd_new
MODULES += fd_null
MODULES += fd_open
MODULES += fd_pipe
MODULES += fd_pop
MODULES += fd_print
MODULES += fd_push
MODULES += fd_reinit
MODULES += fd_setfd
MODULES += fd_setbuf
MODULES += fd_stat
MODULES += fd_string
MODULES += fd_subst
MODULES += fd_tempfile

          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I.
#INCLUDES += -I$(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
#INCLUDES += -I$(top_builddir)/src
INCLUDES += -I$(top_builddir)
INCLUDES += -include assert.h
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
