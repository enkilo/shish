# $Id: Makefile.in,v 1.5 2005/04/15 18:57:53 smoli Exp $
# ===========================================================================
#
# Makefile for src/term subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = src/term/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk
          
# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = term.a
MODULES += term_ansi
MODULES += term_attr
MODULES += term_backspace
MODULES += term_delete
MODULES += term_end
MODULES += term_escape
MODULES += term_getline
MODULES += term_home
MODULES += term_init
MODULES += term_insertc
MODULES += term_left
MODULES += term_newline
MODULES += term_overwritec
MODULES += term_read
MODULES += term_restore
MODULES += term_right
MODULES += term_setline
MODULES += term_winsize

          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I.
#INCLUDES += -I$(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
#INCLUDES += -I$(top_builddir)/src
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
