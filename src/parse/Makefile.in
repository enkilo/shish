# $Id: Makefile.in,v 1.6 2005/04/23 10:19:32 smoli Exp $
# ===========================================================================
#
# Makefile for src/parse subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = .

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk
          
# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = parse.a
MODULES = parse_and_or \
          parse_arith \
          parse_bquoted \
          parse_case \
          parse_chartable \
          parse_command \
          parse_compound_list \
          parse_dquoted \
          parse_error \
          parse_expect \
          parse_for \
          parse_function \
          parse_getarg \
          parse_gettok \
          parse_grouping \
          parse_here \
          parse_if \
          parse_init \
          parse_keyword \
          parse_list \
          parse_loop \
          parse_newnode \
          parse_param \
          parse_pipeline \
          parse_simple_command \
          parse_simpletok \
          parse_skipspace \
          parse_squoted \
          parse_string \
          parse_subst \
          parse_tokens \
          parse_tokname \
          parse_unquoted \
          parse_validname \
          parse_word
          
SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install: 

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -isystem $(top_srcdir)/lib
INCLUDES += -isystem $(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
INCLUDES += -I$(top_builddir)/src
INCLUDES += -I$(top_builddir)
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
