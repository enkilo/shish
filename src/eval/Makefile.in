# $Id: Makefile.in,v 1.8 2005/04/30 18:16:48 smoli Exp $
# ===========================================================================
#
# Makefile for src/eval subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = src/eval/

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)/config.mk
          
# configuration for this directory
# ---------------------------------------------------------------------------
ARCHIVE = eval.a
MODULES += eval_and_or
MODULES += eval_case
MODULES += eval_cmdlist
MODULES += eval_command
MODULES += eval_for
MODULES += eval_if
MODULES += eval_jump
MODULES += eval_loop
MODULES += eval_pipeline
MODULES += eval_pop
MODULES += eval_push
MODULES += eval_simple_command
MODULES += eval_subshell
MODULES += eval_tree


SOURCES = $(MODULES:%=%.c)
OBJECTS = $(MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d)

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(ARCHIVE)
install:

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# local build configuration
# ---------------------------------------------------------------------------
INCLUDES += -I$(top_srcdir)/lib -I.
#INCLUDES += -I$(top_builddir)/lib
INCLUDES += -I$(top_srcdir)/src
#INCLUDES += -I$(top_builddir)/src
INCLUDES += -I$(top_builddir)
INCLUDES += -include assert.h
          
# include build.mk (makefile helper)
# ---------------------------------------------------------------------------
include $(top_builddir)/build.mk
